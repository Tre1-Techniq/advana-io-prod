 <!-- form handling -->
 <form action="https://dev-tyofb4m1.us.auth0.com/api/v2/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="fname" class="text-light">First Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="fname" value="" placeholder="First Name">
        </div>
        <div class="form-group">
            <label for="lname" class="text-light">First Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="lname" value="" placeholder="Last Name">
        </div>
        <div class="form-group">
            <label for="company" class="text-light">Company</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="company" value="" placeholder="Company">
        </div>
        <div class="form-group">
            <label for="title" class="text-light">Title</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="title" value="" placeholder="Title">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="user@email.com">
        </div>
        <div class="form-group">
            <label for="access" class="text-light">Access</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="access" value="Brand" >
                <label for="radio-2" class="radio-label">Brand</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="access" value="Operator" >
                <label for="radio-3" class="radio-label">Operator</label>
            </div>
        </div>

        <div class="form-group">
            <label for="roles" class="text-light">Roles</label>
            <div class="form-check inline">
                <input class="form-check-input" type="checkbox" id="check-2" name="roles" value="User" checked >
                <label for="check-2" class="form-check-label">User</label>
            </div>
            <div class="radio inline">
                <input class="form-check-input" type="checkbox" id="check-3" name="roles" value="Admin" disabled>
                <label for="check-3" class="form-check-label">Admin</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Submit</button>
        </div>

    </div>
</form>
